
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@System.Configuration.ConfigurationManager.AppSettings["title"] | Log in</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    @Styles.Render("~/SiteContentLogin/css")
    <link rel="stylesheet" href="~/css/bootstrap.min.css">


    @*@Scripts.Render("~/bundles/modernizr")*@
    <script src="~/js/modernizr-3.6.0.min.js"></script>
    <!-- iCheck -->


    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition lockscreen">
    <!-- Automatic element centering -->

    <div class="login-page-wrap">
        <div class="login-page-content">
            <div class="login-box">
                <div class="item-logo">
                    <img src="@Url.Content(@System.Configuration.ConfigurationManager.AppSettings["logopath"])" alt="logo">
                </div>
                <form method="post" action="/Account/index">
                    <div class="form-group has-feedback">
                        <input type="text" name="fldemail" class="form-control" placeholder="Enter Your Id">
                        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="password" name="fldpassword" class="form-control" placeholder="Password">
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    </div>
                    <div class="col-xl-4">

                        <button type="submit" class="btn btn-primary btn-block btn-flat">Submit</button>

                    </div>

                    <div class="help-block text-center">
                        @ViewBag.msg
                    </div>
                </form>
                
            </div>
            <div class="sign-up">Don't have an account ? <a href="#">Signup now!</a></div>
        </div>
    </div>

    
    <!-- /.center -->
    <!-- jQuery 3 -->
    @Scripts.Render("~/MyCommonJs/CommonJs");

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>

