@model SiteAllAdmin.Models.HomeSlider

@{
    ViewBag.Title = "Create";
}

<div class="breadcrumbs-area">
    <h3>Create Home Slider</h3>
    <ul>
        <li>
            <a href="/admin/dashboard">Home</a>
        </li>
        <li>Create </li>
    </ul>
</div>
<div class="card height-auto">
    <div class="card-body">

      @using (Html.BeginForm("Create", "Sliders", FormMethod.Post, new
      {
          enctype = "multipart/form-data"
      }))
      {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>HomeSlider</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                

                <div class="form-group">
                    @Html.LabelFor(model => model.homestatement, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.homestatement, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.homestatement, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                  
                    <div class="col-md-12">
                        <label for="uploadbanner">Add Description</label>
                        @Html.EditorFor(model => model.slidesc, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.slidesc, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @*@Html.LabelFor(model => model.homePhoto, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <div class="col-md-12">
                       <label for="uploadbanner">Upload Banner</label>
                        <input type="file" name="uploadbanner" class="form-control-file">
                        @*@Html.ValidationMessageFor(model => model.homePhoto, "", new { @class = "text-danger" })*@
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.fldstatus, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.fldstatus)
                            @Html.ValidationMessageFor(model => model.fldstatus, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                @*<div class="form-group">
                    @Html.LabelFor(model => model.flddoe, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.flddoe, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.flddoe, "", new { @class = "text-danger" })
                    </div>
                </div>*@

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
        </div></div>
