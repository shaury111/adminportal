@model IEnumerable<SiteAllAdmin.Models.Addextrafeature>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.columnname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.columnvalue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserDetail.fldName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.columnname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.columnvalue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserDetail.fldName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
