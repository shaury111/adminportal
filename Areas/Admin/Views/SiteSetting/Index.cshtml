@model IEnumerable<SiteAllAdmin.Models.SiteSetting>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumbs-area">
    <h3>Siye Settings</h3>
    <ul>
        <li>
            <a href="/admin/dashboard">Home</a>
        </li>
        <li>Site Setings</li>
    </ul>
</div>

<div class="card height-auto">
    <div class="card-body">


        <table class="table">
            <tr>
                <th>
                    Phone No
                </th>
                <th>
                    Email Id
                </th>
                <th>
                    Phone 2
                </th>
                <th>
                    Address
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.sitephoneno)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.siteemailid)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.sitecontactno2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.siteAddress)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id })

        </td>
    </tr>
}

        </table>
</div></div>